<UserControl x:Class="HybridWebApp.Toolkit.WP8.Views.OfflineOverlay"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}">

    <Grid x:Name="LayoutRoot" Background="White" HorizontalAlignment="Stretch" VerticalAlignment='Stretch'>
        <StackPanel x:Name="NavigationFailed" Grid.Row="1" VerticalAlignment="Center">
            <Image Source="/Assets/Tiles/FlipCycleTileLarge.png" Width="336" />
            <TextBlock Text="Navigation Failed." Foreground="Black" HorizontalAlignment="Center" Style="{StaticResource PhoneTextTitle2Style}" Margin="0,0,0,20"/>
            <TextBlock Text="Check your data connection then retry." Foreground="Black" HorizontalAlignment="Center" Style="{StaticResource PhoneTextSmallStyle}"/>
            <Button Content="Retry" Click="Retry_Click" Foreground="{StaticResource PhoneAccentBrush}" Width="125" Height="75" BorderBrush="{StaticResource PhoneAccentBrush}"/>
        </StackPanel>
    </Grid>
</UserControl>